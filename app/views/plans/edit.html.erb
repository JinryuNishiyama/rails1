<h2>編集</h2>

<%= render "shared/error", obj: @plan %>

<%= form_with model: @plan do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
    
    <tr>
      <th><%= f.label :date, "日付" %></th>
      <td><%= f.date_field :date %></td>
    </tr>
    
    <tr>
      <th><%= f.label :starting_time, "開始時間" %></th>
      <td><%= f.time_field :starting_time %></td>
    </tr>
    
    <tr>
      <th><%= f.label :ending_time, "終了時間" %></th>
      <td><%= f.time_field :ending_time %></td>
    </tr>
    
    <tr>
      <th><%= f.label :note, "備考" %></th>
      <td><%= f.text_area :note %></td>
    </tr>
  </table>
  
  <p><%= f.submit "編集を完了する" %></p>
  <p><%= link_to "スケジュール一覧に戻る", :plans, class: "link" %></p>
<% end %>